// Typescript configuration file adapted from tsconfig.json example in zeit/next-plugins repo
//
// Source: https://github.com/zeit/next-plugins/tree/master/packages/next-typescript
// Version: commit 8d58b41 on Dec 15, 2018
// Accessed: January 2019
{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "outDir": "server/dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "include": ["./server/src/**/*", "server/resolvers.ts"],
  "exclude": ["./server/dist/**/*", "./server/src/auth/**/*"]
}
