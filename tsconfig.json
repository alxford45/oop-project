// Typescript configuration file copied from tsconfig.json example in zeit/next-plugins repo
//
// Source: https://github.com/zeit/next-plugins/tree/master/packages/next-typescript
// Version: commit 8d58b41 on Dec 15, 2018
// Accessed: January 2019
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  }
}
